{
  "intents": [
    {
      "tag": "greeting",
      "patterns": [
        "hello",
        "hi",
        "whatsup?",
        "hey",
        "howdy",
        "good day",
        "greetings",
        "hiya", 
        "greetings",
        "how are you"
      ],
      "responses": [
        "How are you doing today?",
        "Hello there! How can I help you?",
        "Hi! Great to see you!"
      ]
    },
    {
        "tag": "feeling_good",
        "patterns": [
            "good",
            "great",
            "fantastic",
            "awesome",
            "not bad",
            "splendid",
            "feeling good",
            "feeling great"
        ],
        "responses": [
            "That's great to hear! How can I help you today?",
            "Nice! I am Glad you're feeling good!",
            "Awesome! Let's keep the good vibes going!"
        ]
    },
    {
      "tag": "goodbye", 
      "patterns": [
        "bye",
        "goodbye", 
        "see you",
        "farewell"
      ],
      "responses": [
        "Goodbye! Have a great day!",
        "See you later!",
        "Take care!"
      ]
    },
    {
      "tag": "thanks",
      "patterns": [
        "thank you",
        "thanks",
        "appreciate it"
      ],
      "responses": [
        "You're welcome!",
        "Happy to help!",
        "No problem at all!"
      ]
    },
    {
      "tag": "name_query",
      "patterns": [
        "what is your name",
        "who are you",
        "what should I call you"
      ],
      "responses": [
        "Steve, my name is Steve.. I think.",
        "You can call me ChatBot!",
        "I'm your friendly neighbourhood Spiderman... I mean assistant!"
      ]
    },
    {
      "tag": "age_query", 
      "patterns": [
        "how old are you",
        "what is your age",
        "when were you created"
      ],
      "responses": [
        "I'm as old as time itself!!",
        "I was born when this code was written by Sam!!"
      ]
    },
    {
      "tag": "food_drink",
      "patterns": [
        "(?:have|drink|want|like)\\s+(?:to\\s+)?(?:a\\s+|some\\s+)?(?P<drink>\\w+)",
        "I want (?P<item>\\w+)",
        "can I have (?P<item>\\w+)"
      ],
      "responses": [
        "You can have {food_item} and {drink_item} with me!",
        "Sure! {drink_item} sounds great with some {food_item}!",
        "Perfect choice! {drink_item} and {food_item} coming right up!"
      ]
    }
  ]
}